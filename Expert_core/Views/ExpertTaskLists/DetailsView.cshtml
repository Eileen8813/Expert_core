@model Expert_core.Models.TaskList

@{
    ViewData["Title"] = "DetailsView";
}

<h1>收到的委託</h1>

<div class="expertlisttitle">
    <p class="col-7 ">收到的委託</p>

</div>
<div class="container">

    <div class="expertlsit mx-auto">

        <div class="mx-auto w-70 p-5">
            <div class="mb-3 form-control-lg">
                委託者:
            </div>

            <hr>
            <div class="mb-3 form-control-lg ">
                委託內容:
            </div>

            <div class="form-floating mb-3">
                <textarea class="form-control" readonly id="TaskTextarea" style="height: 400px"></textarea>

            </div>
            <!--委託時間-->
            <div class=" border mb-3">
                <div class="form-control-lg">
                    委託時間:
                </div>

                <div class="mb-3 row p-3">
                    <div class="form-floating col-5 p-3">
                        <input type="text" readonly class="form-control list" id="floatingPtimeone"
                               placeholder="委託截止日">

                    </div>
                    <div class="col-1 p-3 mx-auto">
                        ~
                    </div>
                    <div class="form-floating col-5 p-3">

                        <input type="text" readonly class="form-control list" id="floatingPtimeone"
                               placeholder="委託截止日">
                    </div>
                </div>
            </div>
            <!--委託時間結束-->
            <!--委託預算-->
            <div class=" border mb-3">
                <div class="form-control-lg ">
                    委託預算:
                </div>
                <div class="form-floating col-12 p-3 ">

                    <input type="text" readonly class="form-control list">
                </div>
            </div>
            <!--委託預算結束-->
            <!--委託地點-->

            <div class="border p-3  mb-3">
                <div class="form-control-lg">
                    委託工作地點:
                </div>
                <div class="mb-3 row p-3">
                    <div class="form-floating col-12 p-3">
                        <input type="text" readonly class="form-control list">

                    </div>
                    <div class="form-control-lg">
                        指定工作地址:
                    </div>
                    <div class="form-floating col-12 p-3">

                        <input type="text" readonly class="form-control list">
                    </div>
                </div>



            </div>
            <!--委託地點END-->
            <!--委託付款-->
            <div class="border p-3 mb-3">
                <div class="form-control-lg">
                    委託付款方式:
                </div>
                <div class="form-floating col-12 p-3 ">

                    <input type="text" readonly class="form-control list">
                </div>
            </div>
            <!--委託付款END-->

            <div class="row">

             
                <div class="form-floating col-3 mx-auto p-3">
                    @Html.ActionLink("返回","Index","ExpertTaskLists",null,new{ @class="btnResume pt-3"} )

                </div>
               

            </div>
           
        </div>
    </div>
</div>






@section Styles{


        }
@section Scripts{
    <script src="~/js/expert.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
            crossorigin="anonymous"></script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

