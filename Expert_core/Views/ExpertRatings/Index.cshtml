                @Html.DisplayFor(modelItem => item.RatingContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RatingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SourceRoleId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SourceAccountId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TargetRoleId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TargetAccountId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RatingId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RatingId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RatingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
